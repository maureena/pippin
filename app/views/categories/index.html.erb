<div class="row">
  <h1>All Categories</h1>
  <% @categories.each do |category| %>
    <h4><%= link_to category.name, category %> <small>Add subcategory</small></h4>
      <% category.subcategories.each do |subcategory| %>
        <h5><%= link_to subcategory.name, subcategory %></h5>
      <% end %>
  <% end %>
</div>
