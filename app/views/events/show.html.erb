<h1><%= @event.title %></h1>

<%= link_to "Edit", edit_event_path(@event), class: '' %>

<p><%= @event.body %></p>
<p><%= @event.price %></p>

<% if @event.venues.first %>
  <p><%= @event.venues.first.name %></p>
  <p><%= @event.venues.first.address %></p>
  <p><%= @event.venues.first.phone %></p>
  <p><%= @event.venues.first.website %></p>
<% end %>